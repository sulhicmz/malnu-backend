APP_NAME=Hyperf
APP_ENV=local
APP_DEBUG=true
APP_KEY=

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_CHANNELS=single
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=hypervel
# DB_USERNAME=root
# DB_PASSWORD=

# Session Driver (options: file, database, redis)
# Using database by default for simplicity
# Change to 'redis' for better performance with Redis service
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_DRIVER=redis

# Queue Connection (options: sync, database, redis)
# Using database by default for simplicity
# Change to 'redis' for better performance with Redis service
QUEUE_CONNECTION=database

# Redis Configuration for Docker
# When using Docker Compose, use 'redis' as the host (Docker service name)
# When not using Docker, change REDIS_HOST to localhost or 127.0.0.1
REDIS_HOST=redis
REDIS_AUTH=
REDIS_PORT=6379
REDIS_DB=0

JWT_SECRET=1cc906b0f570f76360c5d836974e8d0d5fee27278fd6e3d935fa49849f943e4d
DEPLOY_SERVER=your-server@your-ip

# Security Headers Configuration
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
CSP_REPORT_ONLY=false
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' data:"
CSP_CONNECT_SRC="'self'"
CSP_FRAME_SRC="'self'"
CSP_OBJECT_SRC="'none'"
CSP_MEDIA_SRC="'self'"
CSP_CHILD_SRC="'self'"
CSP_REPORT_URI="/csp-report"
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION="1; mode=block"
REFERRER_POLICY="strict-origin-when-cross-origin"
PERMISSIONS_POLICY="geolocation=(), microphone=(), camera=()"