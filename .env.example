APP_NAME=Hypervel
APP_ENV=local
APP_DEBUG=true
APP_KEY=

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_CHANNELS=single
LOG_LEVEL=debug

DB_CONNECTION=sqlite
# DB_HOST=localhost
# DB_PORT=3306
# DB_DATABASE=hypervel
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_DRIVER=redis

QUEUE_CONNECTION=database

REDIS_HOST=localhost
REDIS_AUTH=(null)
REDIS_PORT=6379
REDIS_DB=0

JWT_SECRET=
DEPLOY_SERVER=your-server@your-ip

# Performance Optimization Settings
PERFORMANCE_MONITORING_ENABLED=true
LOG_SLOW_QUERIES=true
SLOW_QUERY_THRESHOLD_MS=500
LOG_HIGH_MEMORY_USAGE=true
HIGH_MEMORY_THRESHOLD_MB=128
LOG_MANY_QUERIES=true
QUERY_COUNT_THRESHOLD=20
CACHE_HIT_TARGET=80
TRACK_CACHE_HIT_RATES=true
USER_DATA_CACHE_TTL=3600
ROLE_PERMISSION_CACHE_TTL=7200
CONFIG_CACHE_TTL=86400
ENABLE_QUERY_CACHE=true
ENABLE_RESULT_CACHE=true
N_PLUS_ONE_DETECTION=true
METRICS_COLLECTION_ENABLED=true
METRICS_STORAGE_DRIVER=file
PERFORMANCE_TARGET_RESPONSE_MS=200
PERFORMANCE_TARGET_QUERY_MS=100
PERFORMANCE_TARGET_MEMORY_MB=512
DB_MIN_CONNECTIONS=1
DB_MAX_CONNECTIONS=10
DB_MAX_IDLE_TIME=60

# Security Headers Configuration
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
CSP_REPORT_ONLY=false
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' data:"
CSP_CONNECT_SRC="'self'"
CSP_FRAME_SRC="'self'"
CSP_OBJECT_SRC="'none'"
CSP_MEDIA_SRC="'self'"
CSP_CHILD_SRC="'self'"
CSP_REPORT_URI="/csp-report"
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION="1; mode=block"
REFERRER_POLICY="strict-origin-when-cross-origin"
PERMISSIONS_POLICY="geolocation=(), microphone=(), camera=()"