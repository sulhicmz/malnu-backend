APP_NAME=Hyperf
APP_ENV=local
APP_DEBUG=true
APP_KEY=

APP_LOCALE=en
APP_FALLBACK_LOCALE=en

LOG_CHANNEL=stack
LOG_CHANNELS=single
LOG_LEVEL=debug

DB_CONNECTION=mysql
DB_HOST=db
DB_PORT=3306
DB_DATABASE=malnu
DB_USERNAME=malnu_user
DB_PASSWORD=change_me_in_production

# Session Driver (options: file, database, redis)
# Using database by default for simplicity
# Change to 'redis' for better performance with Redis service
SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

CACHE_DRIVER=redis

# Queue Connection (options: sync, database, redis)
# Using database by default for simplicity
# Change to 'redis' for better performance with Redis service
QUEUE_CONNECTION=database

# Redis Configuration for Docker
# When using Docker Compose, use 'redis' as the host (Docker service name)
# When not using Docker, change REDIS_HOST to localhost or 127.0.0.1
REDIS_HOST=redis
REDIS_AUTH=
REDIS_PORT=6379
REDIS_DB=0

# Rate Limiting Configuration
RATE_LIMIT_DRIVER=redis
RATE_LIMIT_REDIS_CONNECTION=default
RATE_LIMIT_PREFIX=ratelimit:

# JWT Authentication Configuration
# Generate a secure JWT secret using: openssl rand -hex 32
JWT_SECRET=your-secret-key-here

# JWT Token Time-to-Live (in minutes)
# Access token lifetime - 30 minutes for security
JWT_TTL=30

# JWT Refresh Token Time-to-Live (in minutes)
# Refresh token valid for 24 hours
JWT_REFRESH_TTL=1440

# JWT Blacklist Configuration
# Enable token blacklisting for secure logout
JWT_BLACKLIST_ENABLED=true

# JWT Algorithm (HS256, HS384, HS512)
JWT_ALGO=HS256

DEPLOY_SERVER=your-server@your-ip

# Security Headers Configuration
SECURITY_HEADERS_ENABLED=true
CSP_ENABLED=true
CSP_REPORT_ONLY=false
CSP_DEFAULT_SRC="'self'"
CSP_SCRIPT_SRC="'self' 'unsafe-inline' 'unsafe-eval'"
CSP_STYLE_SRC="'self' 'unsafe-inline'"
CSP_IMG_SRC="'self' data: https:"
CSP_FONT_SRC="'self' data:"
CSP_CONNECT_SRC="'self'"
CSP_FRAME_SRC="'self'"
CSP_OBJECT_SRC="'none'"
CSP_MEDIA_SRC="'self'"
CSP_CHILD_SRC="'self'"
CSP_REPORT_URI="/csp-report"
HSTS_ENABLED=true
HSTS_MAX_AGE=31536000
HSTS_INCLUDE_SUBDOMAINS=true
HSTS_PRELOAD=true
X_FRAME_OPTIONS=DENY
X_CONTENT_TYPE_OPTIONS=nosniff
X_XSS_PROTECTION="1; mode=block"
REFERRER_POLICY="strict-origin-when-cross-origin"
PERMISSIONS_POLICY="geolocation=(), microphone=(), camera=()"