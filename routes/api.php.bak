<?php

declare(strict_types=1);

use App\Http\Controllers\Api\AuthController;
use App\Http\Controllers\Api\SchoolManagement\StudentController;
use App\Http\Controllers\Api\SchoolManagement\TeacherController;
use App\Http\Controllers\Attendance\LeaveRequestController;
use App\Http\Controllers\Attendance\LeaveTypeController;
use App\Http\Controllers\Attendance\StaffAttendanceController;
use App\Http\Controllers\Calendar\CalendarController;
use App\Http\Controllers\IndexController;
use Hypervel\Support\Facades\Route;

// Public routes (no authentication required)
Hypervel\Support\Facades\Route::group(['middleware' => ['input.sanitization', 'rate_limit']], function () {
    Hypervel\Support\Facades\Route::post('/auth/register', [AuthController::class, 'register']);
    Hypervel\Support\Facades\Route::post('/auth/login', [AuthController::class, 'login']);
    Hypervel\Support\Facades\Route::post('/auth/password/forgot', [AuthController::class, 'requestPasswordReset']);
    Hypervel\Support\Facades\Route::post('/auth/password/reset', [AuthController::class, 'resetPassword']);
});

// Protected routes (JWT authentication required)
Hypervel\Support\Facades\Route::group(['middleware' => ['jwt', 'rate_limit']], function () {
    Hypervel\Support\Facades\Route::post('/auth/logout', [AuthController::class, 'logout']);
    Hypervel\Support\Facades\Route::post('/auth/refresh', [AuthController::class, 'refresh']);
    Hypervel\Support\Facades\Route::get('/auth/me', [AuthController::class, 'me']);
    Hypervel\Support\Facades\Route::post('/auth/password/change', [AuthController::class, 'changePassword']);
});

// Attendance and Leave Management Routes (protected)
Hypervel\Support\Facades\Route::group(['middleware' => ['jwt', 'rate_limit']], function () {
    Hypervel\Support\Facades\Route::any('/', [IndexController::class, 'index']);

    Hypervel\Support\Facades\Route::prefix('attendance')->group(function () {
        // Staff Attendance Routes
        Hypervel\Support\Facades\Route::apiResource('staff-attendances', StaffAttendanceController::class);
        Hypervel\Support\Facades\Route::post('staff-attendances/mark-attendance', [StaffAttendanceController::class, 'markAttendance']);

        // Leave Management Routes
        Hypervel\Support\Facades\Route::apiResource('leave-types', LeaveTypeController::class);
        Hypervel\Support\Facades\Route::apiResource('leave-requests', LeaveRequestController::class);
        Hypervel\Support\Facades\Route::post('leave-requests/{id}/approve', [LeaveRequestController::class, 'approve']);
        Hypervel\Support\Facades\Route::post('leave-requests/{id}/reject', [LeaveRequestController::class, 'reject']);
    });
});

// School Management Routes (protected)
Hypervel\Support\Facades\Route::group(['middleware' => ['jwt', 'rate_limit']], function () {
    Hypervel\Support\Facades\Route::prefix('school')->group(function () {
        // Student Management Routes
        Hypervel\Support\Facades\Route::apiResource('students', StudentController::class);

        // Teacher Management Routes
        Hypervel\Support\Facades\Route::apiResource('teachers', TeacherController::class);
    });
});

// Calendar and Event Management Routes (protected)
Hypervel\Support\Facades\Route::group(['middleware' => ['jwt', 'rate_limit']], function () {
    Hypervel\Support\Facades\Route::prefix('calendar')->group(function () {
        // Calendar Management
        Hypervel\Support\Facades\Route::post('calendars', [CalendarController::class, 'createCalendar']);
        Hypervel\Support\Facades\Route::get('calendars/{id}', [CalendarController::class, 'getCalendar']);
        Hypervel\Support\Facades\Route::put('calendars/{id}', [CalendarController::class, 'updateCalendar']);
        Hypervel\Support\Facades\Route::delete('calendars/{id}', [CalendarController::class, 'deleteCalendar']);

        // Event Management
        Hypervel\Support\Facades\Route::post('events', [CalendarController::class, 'createEvent']);
        Hypervel\Support\Facades\Route::get('events/{id}', [CalendarController::class, 'getEvent']);
        Hypervel\Support\Facades\Route::put('events/{id}', [CalendarController::class, 'updateEvent']);
        Hypervel\Support\Facades\Route::delete('events/{id}', [CalendarController::class, 'deleteEvent']);
        Hypervel\Support\Facades\Route::get('calendars/{calendarId}/events', [CalendarController::class, 'getEventsByDateRange']);

        // Event Registration
        Hypervel\Support\Facades\Route::post('events/{eventId}/register', [CalendarController::class, 'registerForEvent']);

        // Calendar Sharing
        Hypervel\Support\Facades\Route::post('calendars/{calendarId}/share', [CalendarController::class, 'shareCalendar']);

        // Resource Booking
        Hypervel\Support\Facades\Route::post('resources/book', [CalendarController::class, 'bookResource']);
    });
});
